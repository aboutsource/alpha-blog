<div class="container-fluid container-md">
  <div class="row justify-content-center">
    <div class= "col-12 col-md-10 mt-4">
      <%= render 'shared/errors', obj: @article%>

      <%= form_with(model: @article, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>  
        <div class="form-group row">
            <%= f.label :title, class: "col-md-2 col-form-label text-light font-weight-bold" %>
            <div class="col-md-10 col-sm-12">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title" %>
            </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-md-10 col-sm-12">
            <%= f.text_area :description, rows:10, class: "form-control shadow rounded", 
                placeholder: "Write something beautiful here" 
            %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-md-10 col-sm-12">
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
                { prompt: "Choose your category (optional)" }, 
                { multiple: true, size: 3, class: "custom-select shadow rounded" }) 
            %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg"%>
        </div>
      <% end %>

    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to all articles ]', articles_path, class: "text-info" %> 
    </div>
  </div>
</div>
